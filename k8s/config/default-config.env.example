# AWS Configuration
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID
AWS_REGION=us-east-1
S3_BUCKET_NAME=llm-models

# Model Configuration
MODEL_NAME=Meta-Llama-3.1-8B-Instruct
MODEL_REPO=meta-llama/Meta-Llama-3.1-8B-Instruct
MODEL_REPO_DASHED=meta-llama--Meta-Llama-3.1-8B-Instruct
MODEL_MAX_LENGTH=8192
MODEL_GPU_MEMORY_UTIL=0.7

# Container Images
VLLM_IMAGE=vllm/vllm-openai:v0.11.0

# Resource Configuration
LLM_MEMORY_LIMIT=24Gi
LLM_MEMORY_REQUEST=12Gi
LLM_CPU_LIMIT=1
LLM_CPU_REQUEST=500m
EMPTYDIR_SIZE=20Gi

# EKS Configuration
IAM_ROLE_NAME=YOUR_IAM_ROLE_NAME
INSTANCE_TYPE=g6e.xlarge
NAMESPACE=unmute

# Secrets (should be provided at deploy time or via sealed secrets)
HUGGING_FACE_HUB_TOKEN=hf_your_token_here
