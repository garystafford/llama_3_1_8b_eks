# Production Configuration Example
# Copy this to config.env and customize for your environment
#
# IMPORTANT: config.env is git-ignored for security
# Copy this example: cp config.env.example config.env

# AWS Configuration
AWS_ACCOUNT_ID=676164205626
AWS_REGION=us-east-1
S3_BUCKET_NAME=audio-models

# Model Configuration
MODEL_NAME=Meta-Llama-3.1-8B-Instruct
MODEL_REPO=meta-llama/Meta-Llama-3.1-8B-Instruct
MODEL_REPO_DASHED=meta-llama--Meta-Llama-3.1-8B-Instruct
MODEL_MAX_LENGTH=8192
MODEL_GPU_MEMORY_UTIL=0.9

# Container Images
VLLM_IMAGE=vllm/vllm-openai:v0.11.0

# Resource Configuration
LLM_MEMORY_LIMIT=24Gi
LLM_MEMORY_REQUEST=12Gi
LLM_CPU_LIMIT=1
LLM_CPU_REQUEST=500m
EMPTYDIR_SIZE=40Gi

# EKS Configuration
IAM_ROLE_NAME=deepfake-pytorch-eks-model-downloader
INSTANCE_TYPE=g5.2xlarge
NAMESPACE=analysis
WORKLOAD_LABEL=personaplex-server

# LoadBalancer Configuration
# Replace with your current IP address for security
LOADBALANCER_IP_WHITELIST=0.0.0.0/32

# HTTPS/Ingress Configuration (Optional)
# If you want HTTPS with custom domain, configure these values
# Otherwise, access via LoadBalancer on port 8000
DOMAIN_NAME=analysis.example.com
ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID
